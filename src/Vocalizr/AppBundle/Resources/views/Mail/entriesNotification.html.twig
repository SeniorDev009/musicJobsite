<p>Hello {{ userInfo.getUsernameOrFirstName }}!</p>

<p>You received {% if projectBids|length == 1 %}an entry{% else %}entries{% endif %} for your contest: 
    <a href="{{ url('contest_view', {uuid: project.uuid}) }}" style="font-weight: bold; color: #14b9d6; text-decoration: none;">{{ project.title }}</a></p>
    
{% for projectBid in projectBids %}
<div style="background: #f1f1f1; border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
    <table cellspacing="0" cellpadding="0" border="0" width="100%">
        <tr>
            <td width="80"><img src="{{ url('circle_avatar', {path: projectBid.userInfo.path}) }}" width="65" style="display: inline-block;"></td>
            <td width="250" style="vertical-align: middle;font-family: sans-serif; font-size: 14px;">
                {{ projectBid.userInfo.displayName }}<br>
                <strong>{% if projectBid.userInfo.isVocalist and projectBid.userInfo.isProducer %}Producer, Vocalist{% else %}{% if projectBid.userInfo.isVocalist %}Vocalist{% endif %}{% if projectBid.userInfo.isProducer %}Producer{% endif %}{% endif %}</strong><br>
                from {% if projectBid.userInfo.city %}{{ projectBid.userInfo.city }}, {% endif %}{{ projectBid.userInfo.country|countryName }}
            </td>
            <td width="200" style="text-align: right; vertical-align: middle;font-family: sans-serif; font-size: 25px;"></td>
        </tr>
    </table>
</div>
{% endfor %}
