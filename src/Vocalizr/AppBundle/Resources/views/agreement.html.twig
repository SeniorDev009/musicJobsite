    {% if project is defined %}
        {% if project.lookingFor == "vocalist" %}
        <p><strong>Vocalist</strong></p>
        <p>
            {% if project.employeeName %}
            {{ project.employeeName|upper }}<br>
            {% else %}
            &lt;&lt;Vocalist name&gt;&gt;<br>
            {% endif %}
            {{ "now"|date('M d, Y') }}
        </p>

        <p><strong>Producer</strong></p>
        <p>
            {{ project.employerName|upper }}<br>
            {{ projectBid.updatedAt|date('M d, Y') }}
        </p>
        {% else %}
        <p><strong>Vocalist</strong></p>
        <p>
            {{ project.employerName|upper }}<br>
            {{ projectBid.updatedAt|date('M d, Y') }}
        </p>

        <p><strong>Producer</strong></p>
        <p>
            {% if project.employeeName %}
            {{ project.employeeName|upper }}<br>
            {% else %}
            &lt;&lt;Producer name&gt;&gt;<br>
            {% endif %}
            {{ "now"|date('M d, Y') }}
        </p>
        {% endif %}
    {% else %}
        <p><strong>Vocalist</strong></p>
        <p>
            &lt;&lt;Vocalist name&gt;&gt;<br>
            &lt;&lt;Date signed&gt;&gt;
        </p>
        
        <p><strong>Producer</strong></p>
        <p>
            &lt;&lt;Producer name&gt;&gt;<br>
            &lt;&lt;Date signed&gt;&gt;
        </p>
