<div class="page-content">
    <h4>1. DATE AGREEMENT ENTERED</h4>
    {% if project is defined and not project.employerName is null %}
    {{ "now"|date('M d, Y') }}
    {% else %}
    &lt;&lt; GIG START DATE &gt;&gt;
    {% endif %}
    
    <h4>2. GIG</h4>
    {% if project is defined %}
    {{ project.title|upper }}
    {% else %}
    &lt;&lt; GIG TITLE &gt;&gt;
    {% endif %}
    
    <h4>3. PARTIES</h4>
    {% if project is defined %}
        {% if project.lookingFor == "vocalist" %}
            <p>{{ project.employerName|upper }}, {{ project.UserInfo.city|upper }}, {{ project.UserInfo.country|countryName|upper }} <strong>(Producer)</strong></p>
            <p class="and">- and -</p>
            {% if project.employeeName %}
            <p>{{ project.employeeName|upper }}, {{ project.EmployeeUserInfo.city|upper }}, {{ project.EmployeeUserInfo.country|countryName|upper }} &gt;&gt; <strong>(Vocalist)</strong></p>
            {% else %}
            <p>&lt;&lt; VOCALIST NAME, CITY, COUNTRY &gt;&gt; <strong>(Vocalist)</strong></p>
            {% endif %}
            <p class="and">- and -</p>
            <p>Vocalizr of Melbourne, Australia</p>
        {% else %}
            <p>&lt;&lt; PRODUCER NAME, CITY, COUNTRY &gt;&gt; <strong>(Producer)</strong></p>
            <p class="and">- and -</p>
            <p>{{ project.employerName|upper }}, {{ project.UserInfo.city|upper }}, {{ project.UserInfo.country|countryName|upper }} <strong>(Producer)</strong></p>
            <p class="and">- and -</p>
            <p>Vocalizr of Melbourne, Australia</p>
        {% endif %}
    {% else %}
    <p>&lt;&lt; VOCALIST NAME, CITY, COUNTRY &gt;&gt; <strong>(Vocalist)</strong></p>
    <p class="and">- and -</p>
    <p>&lt;&lt; PRODUCER NAME, CITY, COUNTRY &gt;&gt; <strong>(Producer)</strong></p>
    <p class="and">- and -</p>
    <p>Vocalizr of Melbourne, Australia</p>
    {% endif %}
    
