{% extends 'app.html.twig' %}

{% block title %}Author, Vmag Admin{% endblock %}

{% block javascript %}
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <a href="{{ path('admin_vmag_authors') }}" class="btn btn-sm btn-default pull-right" style="margin-left: 5px;">BACK TO LIST</a>
            <a href="{{ path('admin_vmag_author') }}" class="btn btn-sm btn-default pull-right">NEW AUTHOR</a>
            <h1>Vmag Author</h1>
            
            {% if app.session.hasFlash('notice') %}
                <div class="alert alert-success">
                    {{ app.session.flash('notice') }}
                </div>
                {{ app.session.removeFlash('notice') }}
            {% endif %}
            
            <form action="{{ path('admin_vmag_author', {id: app.request.get('id')} ) }}" method="post" novalidate enctype="multipart/form-data">
            <div class="light-content">
                {{ form_row(form._token) }}
                    
                {{ form_errors(form) }}


                <div class="row form-group">
                    <div class="col-sm-5">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-sm-5">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <hr>
                
                <div class="row form-group">
                    <div class="col-sm-10">
                        {{ form_row(form.bio) }}
                    </div>
                </div>
                    
                <hr>
                
                <div class="row form-group">
                    <div class="col-sm-12">
                        {% if author.id %}
                            <!--<a href="{{ path('admin_vmag_article_delete', {id: author.id}) }}" class="btn btn-sm btn-default roll-alt" onclick="return confirm('Are you sure you want to delete this author?');">DELETE</a>-->
                        {% endif %}
                        <button type="submit" name="save" class="btn btn-sm btn-default">SAVE</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
                    
        
    </div>
    
{% endblock %}