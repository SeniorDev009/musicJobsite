{% extends 'ProProfile/layout.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/plugins/plyr/plyr.css') }}" />
{% endblock %}
{% block javascript %}
    <script type="text/javascript" src="{{ asset('/plugins/plyr/plyr.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/js/user-profile-video-tab.js') }}"></script>
    <script>
        jQuery(document).ready(function($) {
            new VocalizrAppUserProfileVideoTab($).init();
        });
    </script>
{% endblock %}
{% block tabbed_content %}
    <nav>
        {% include 'ProProfile/include/tab_nav.html.twig' %}
    </nav>
    <div class="tab-content" id="nav-tabContent">

        <!-- === Tab 1 === -->
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            {% include 'ProProfile/tabs/home_tab.html.twig' %}
        </div>
        <!-- === END Tab 1 === -->

        <div class="tab-pane fade" id="nav-tracks" role="tabpanel" aria-labelledby="nav-tracks-tab">Under development
        </div>
        <div class="tab-pane fade" id="nav-videos" role="tabpanel" aria-labelledby="nav-videos-tab">Under development
        </div>
        <div class="tab-pane fade" id="nav-reviews" role="tabpanel" aria-labelledby="nav-reviews-tab">Under
            development
        </div>
        <div class="tab-pane fade" id="nav-connections" role="tabpanel" aria-labelledby="nav-connections-tab">Under
            development
        </div>
    </div>
{% endblock %}