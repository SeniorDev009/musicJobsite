        <hr>

        <div class="row form-group">
            <div class="col-sm-5">
                {{ form_row(form.gender) }}
            </div>
            <div class="col-sm-5">
                {{ form_row(form.languages) }}
            </div>
        </div>

        <div class="row form-group">
            <div class="col-sm-5">
                {{ form_row(form.city) }}
            </div>
            <div class="col-sm-5">
                {{ form_row(form.country) }}
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-sm-5 checkboxes">
                <label>I AM A:</label>
                {{ form_widget(form.is_producer, {'attr' : {'id' : 'user_is_producer'}}) }}
                {{ form_label(form.is_producer) }}&nbsp;&nbsp;&nbsp;
                {{ form_widget(form.is_vocalist, {'attr' : {'id' : 'user_is_vocalist'}}) }}
                {{ form_label(form.is_vocalist) }}
            </div>
            <div class="col-sm-7 checkboxes">
                {{ form_widget(form.studio_access) }}
                {{ form_label(form.studio_access) }}
            </div>
        </div>

        <hr>

        <div id="fees-wrap">
            <div class="row">
                <div id="producer-fee" class="col-sm-5{% if not form.vars.value.isProducer %} hide{% endif %}">
                    <label for="">PRODUCER FEE</label>
                    <div class="input-group">
                        <span class="input-group-addon">USD$</span>
                        <input id="user_producer_fee" type="text" name="{{ form.producer_fee.vars.full_name }}" value="{{ form.vars.value.producerFee }}" class="form-control">
                    </div>

                </div>
                <div  id="vocalist-fee" class="col-sm-5{% if not form.vars.value.isVocalist %} hide{% endif %}">
                    <label for="">VOCALIST FEE</label>
                    <div class="input-group">
                        <span class="input-group-addon">USD$</span>
                        <input id="user_vocalist_fee" type="text" name="{{ form.vocalist_fee.vars.full_name }}" value="{{ form.vars.value.vocalistFee }}" class="form-control">
                    </div>
                </div>
            </div>

            <hr>
        </div>

        <div class="row">
            <div class="col-sm-12">
                {{ form_row(form.genres) }}
            </div>
        </div>

        <div class="vocal-profile">
            <hr>

            <div class="row">
                <div class="col-sm-7 mic-field">
                    <label for="mic">MY MICROPHONE:</label>
                    {{ form_row(form.microphone) }}
                </div>
            </div>

            <hr class="vocal-profile">

            <div class="row form-group">
                <div class="col-sm-5">
                    {{ form_row(form.vocal_characteristics) }}
                </div>
                <div class="col-sm-5">
                    {{ form_row(form.vocal_styles) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.sounds_like) }}
                </div>
            </div>
        </div>

        <hr>

        {{ form_row(form._token) }}

        <button type="submit" name="save" value="account" class="btn btn-sm btn-default">SAVE</button>
    </form>
</div>
<!--/END PROFILE TAB -->