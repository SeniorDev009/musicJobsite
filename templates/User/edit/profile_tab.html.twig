<!-- PROFILE TAB -->
<div class="tab-pane fade in" id="profile">
    <form id="user-edit-form" action="" method="post" novalidate>

        <div class="row">
            <div class="col-md-9">
                <div class="row form-group">
                    <div class="col-sm-6">
                        {{ form_row(form.display_name) }}
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-sm-6">
                        {{ form_row(form.first_name) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.last_name) }}
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-sm-12">
                        {{ form_row(form.profile) }}
                    </div>
                </div>
            </div>
            <div class="col-md-3 form-group user-edit-avatar">

                <div class="account-avatar-wrap col-sm-12">
                    <div class="account-avatar">
                        {% if app.user.path is empty %}
                            <img id="user-account-avatar" src="{{ asset('images/default_avatar.svg') }}" width="162" height="162" class="img-circle avatar-lg-{{ app.user.username }}" />
                        {% else %}
                            <img id="user-account-avatar" src="{{ asset('uploads/avatar/large/' ~ app.user.path ) }}" width="162" height="162" class="img-circle avatar-lg-{{ app.user.username }}" />
                        {% endif %}
                    </div>
                    <div id="upload-avatar-container" data-url="{{ path('upload_audio') }}" data-username="{{ app.user.username }}">
                        <a id="upload-avatar-btn" class="btn btn-sm btn-default" href="{{ path('user_save_avatar') }}">CHANGE IMAGE</a>
                        <div id="upload-avatar-status" class="avatar-info"></div>
                        <div id="upload-avatar-error" class="avatar-info"></div>
                    </div>
                </div>

            </div>
        </div>
